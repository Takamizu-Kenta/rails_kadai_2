<section class="hero is-dark is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6-table is-6-desktop is-6-widescreen">
          <div class="box">
           <div calss="columns is-multiline">
            <strong><p>＜ルーム予約＞</p></strong>
              <section class="section">
                <div class="colums is-centered">
                  <div class="column is-narrow">
                      <%= render "shared/error", obj: @reservation %>
                     
                        <table class="table is-striped is-fullwidth">
                          <tr>
                            <%= image_tag @room.room_image, size: "600x800", alt: "アイコン" if @room.room_image.present? %>
                          </tr>
                          <th>ルームID</th>
                            <td><%= @room.id %></td>
                          </tr>
                          <tr>
                            <th>ルーム名</th>
                            <td><%= @room.name %></td>
                          </tr>
                          <tr>
                            <th>ルーム紹介</th>
                            <td><%= @room.introduction %></td>
                          </tr>
                          <tr>
                            <th>住所</th>
                            <td><%= @room.address %></td>
                          </tr>
                          <tr>
                            <th>金額</th>
                            <td><%= @room.price %></td>
                          </tr>
                        </table>

                        <div class="actions">
                            <%= link_to "予約画面へ進む", reservations_new_path(:room_id => @room.id), class: "button is-danger is-fullwidth m-t-10 m-b-10", style: "margin-top: 20px;" %>
                        </div>

                        <div class="actions">
                            <%= link_to "※ルーム情報一覧に戻る※", :rooms, class: "button is-primary is-fullwidth m-t-10 m-b-10", style: "margin-top: 20px;" %>
                      </div>
                  </div>
                 </section>
               </div>
             </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>

