  <h3>ルーム予約一覧</h3>
 
    <table class="table is-striped is-fullwidth">
      <thead>
        <tr>
          <th>予約ID</th>
          <th>ルームID</th>
          <th>チェックイン</th>
          <th>チェックアウト</th>
          <th>宿泊人数</th>
          <th>宿泊日数</th>
          <th>合計金額</th>
          <th>ルーム詳細</th>
          <th>予約削除</th>
        </tr>
      </thead>
 
      <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
            <td><%= reservation.id %></td>
            <td><%= reservation.room_id %></td>
            <td><%= reservation.start_date.to_s(:datetime_jp) %></td>
            <td><%= reservation.end_date.to_s(:datetime_jp) %></td>
            <td><%= reservation.people %></td>
            <td><%= reservation.day_gap %></td>
            <td><%= reservation.total_price %></td>
            <td>
              <%= link_to "詳細", room_path(reservation.room_id) %>
            </td>
            <td>
              <%= link_to "削除", reservation_path(reservation.room_id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
          
        <% end %>
      </tbody>
    </table>
