<section class="hero is-dark is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6-table is-6-desktop is-6-widescreen">
          <div class="box">
            
            <div class="field has-text-centered">
              <strong>ユーザ登録情報編集</strong>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="field">
                      <%= f.label :プロフィール画像, class: "label" %>
                      <%= f.file_field :avatar %>
                    </div>

                        <div class="field">
                          <%= f.label :氏名, class: "label" %>
                          <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "input" %>
                        </div>
                    
                          <div class="field">
                            <%= f.label :メールアドレス, class: "label" %>
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
                          </div>

                        <div class="field">
                          <%= f.label :自己紹介, class: "label" %>
                          <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction", class: "textarea", placeholder: "自己紹介を入力してください" %>
                        </div>

                       <div class="field">
                        <%= f.label :新パスワード, class: "label" %>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
                      </div>

                     <div class="field">
                       <%= f.label :新パスワード確認, class: "label" %> <i>(パスワードを変更するには現在のパスワードが必要です)</i><br />
                       <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
                     </div>

                   <div class="actions">
                    <%= f.submit "更新", class: "button is-link"%>
                  </div>
                 <% end %>

                  <strong>※ アカウントを削除する ※</strong>

                <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか？" }, method: :delete ,class: "button is-danger" %>

              <%= link_to "戻る", :back ,class: "button is-link", style: "margin-top: 20px;" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

