
<section class="hero is-dark is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6-table is-6-desktop is-6-widescreen">
          <div class="box">
            
            <div class="field has-text-centered">
              <strong>＜ユーザー新規登録＞</strong>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="field">
                    <%= f.label :プロフィール画像, class: "label" %>
                    <%= f.file_field :profileimg, autofocus: true, autocomplete: "profileimg" %>
                  </div>

                  <div class="field">
                    <%= f.label :氏名, class: "label" %>
                    <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "input", placeholder: "田中 太郎" %>
                  </div>

                    <div class="field">
                      <%= f.label :メールアドレス, class: "label" %>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "example@xxx.com"%>
                    </div>

                      <div class="field">
                        <%= f.label :パスワード, class: "label" %>
                        <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> 文字以上)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
                      </div>

                    <div class="field">
                      <%= f.label :パスワード確認, class: "label" %>
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
                    </div>

                  <div class="field">
                    <%= f.label :自己紹介, class: "label" %>
                    <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction", class: "textarea", placeholder: "自己紹介を入力してください" %>
                  </div>

                  <div class="actions">
                    <%= f.submit "これで登録" , class: "button is-link"%>
                  </div>
              <% end %>

              <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
